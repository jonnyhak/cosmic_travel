<%= form_for @scientist do |f| %>
    <% if flash[:scientist_errors] %>
        <% flash[:scientist_errors].each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %>
    <br>
    <%= f.submit %>
<% end %>